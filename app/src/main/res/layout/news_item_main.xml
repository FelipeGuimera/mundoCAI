<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/escudocaix">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="375dp"
        android:layout_height="362dp"
        android:clipToPadding="true"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/news_image_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"></View>

        <TextView
            android:id="@+id/news_main_tittle"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/mada_extra_bold"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Otra noche de nada: Independiente empató sin goles con Vélez"
            android:layout_gravity="bottom">

        </TextView>

    </androidx.cardview.widget.CardView>

</LinearLayout>