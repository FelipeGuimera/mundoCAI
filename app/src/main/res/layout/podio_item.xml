<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.ranking.RankingFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#EC1C24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- PRIMER PUESTO -->

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/corona"
            app:layout_constraintBottom_toTopOf="@+id/first_positions_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/medalla_de_oro"
            app:layout_constraintEnd_toStartOf="@+id/third_position_image"
            app:layout_constraintStart_toEndOf="@+id/second_position_image"
            app:layout_constraintTop_toBottomOf="@+id/firts_position_name" />

        <TextView
            android:id="@+id/first_position_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1300"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/third_position_image"
            app:layout_constraintStart_toEndOf="@+id/second_position_image"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/first_positions_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ricardobochini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/firts_position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="feliguimera"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/third_position_image"
            app:layout_constraintStart_toEndOf="@+id/second_position_image"
            app:layout_constraintTop_toBottomOf="@+id/first_positions_image" />


        <!-- SEGUNDO PUESTO -->

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/medalla_de_plata"
            app:layout_constraintEnd_toStartOf="@+id/first_positions_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_position_name" />

        <TextView
            android:id="@+id/second_position_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/first_positions_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/second_position_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/danielbertoni"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/first_positions_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/second_position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="miqui7l"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/first_positions_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_position_image" />


        <!-- TERCER PUESTO -->


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/medalla_de_bronce"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/first_positions_image"
            app:layout_constraintTop_toBottomOf="@+id/third_position_name" />

        <TextView
            android:id="@+id/third_position_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1100"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/first_positions_image"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/third_position_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/miguelangelsantoro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/first_positions_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/third_position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="manuelfagundez"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/first_positions_image"
            app:layout_constraintTop_toBottomOf="@+id/third_position_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/backgroud_quiz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>